import sys
from PyQt6.QtWidgets import QApplication, QMainWindow, QPushButton, QVBoxLayout, QWidget, QLabel, QLineEdit, QScrollArea
from PyQt6 import QtCore

class ModernTodoApp(QMainWindow):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Modern To-Do")
        self.setMinimumSize(900, 600)
        self.setup_ui()

    def setup_ui(self):
        central_widget = QWidget()
        self.setCentralWidget(central_widget)

        layout = QVBoxLayout(central_widget)
        layout.setContentsMargins(20, 20, 20, 20)
        layout.setSpacing(15)

        # Titel
        self.title = QLabel("üìù Meine Aufgaben")
        self.title.setStyleSheet("font-size: 24px; font-weight: bold;")
        layout.addWidget(self.title)

        # Suchfeld
        self.search_input = QLineEdit()
        self.search_input.setPlaceholderText("üîç Aufgabe suchen...")
        self.search_input.setStyleSheet("padding: 10px; border-radius: 8px; border: 1px solid #ccc;")
        layout.addWidget(self.search_input)

        # Aufgabenbereich (ScrollArea)
        self.task_area = QScrollArea()
        self.task_area.setWidgetResizable(True)
        self.task_list_container = QWidget()
        self.task_list_layout = QVBoxLayout(self.task_list_container)
        self.task_area.setWidget(self.task_list_container)
        layout.addWidget(self.task_area)

        # Floating Add Button
        self.btn_add = QPushButton("+ Aufgabe hinzuf√ºgen")
        self.btn_add.setStyleSheet("""
            QPushButton {
                background-color: #2e8b57;
                color: white;
                padding: 12px 20px;
                font-size: 16px;
                border-radius: 20px;
            }
            QPushButton:hover {
                background-color: #3cb371;
            }
        """)
        layout.addWidget(self.btn_add, alignment=QtCore.Qt.AlignmentFlag.AlignRight)

if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = ModernTodoApp()
    window.show()
    sys.exit(app.exec())
